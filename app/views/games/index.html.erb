<div class="mx-auto" style="width: 60%">

<p id="notice"><%= notice %></p>

<h1>Score details of each player for each round in all the matches played</h1>

<table class="table">
  <thead>
    <tr>
      <th>Score</th>
      <th>Round no</th>
      <th>Match</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.score %></td>
        <td><%= game.round_no %></td>
        <td><%= game.match.id %></td>
        <td><%= game.team .name%></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Game', new_game_path %>
